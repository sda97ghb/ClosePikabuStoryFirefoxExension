{
  "manifest_version": 2,
  "name": "Закрыватель посов для Pikabu.ru",
  "version": "1.0",

  "homepage_url": "https://github.com/sda97ghb/ClosePikabuStoryFirefoxExension",
  
  "description": "Добавляет кнопки закрытия поста рядом с левыми и нижними кнопками плюсов/минусов.",

  "icons": {
    "96": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://pikabu.ru/*"],
      "js": ["ClosePikabuStoryFirefoxExtension.js"]
    }
  ],

  "web_accessible_resources": [
    "icons/close.png"
  ]
}